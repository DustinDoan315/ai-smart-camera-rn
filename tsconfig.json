{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@ui/*": ["src/ui/*"],
      "@core/*": ["src/core/*"],
      "@app/*": ["src/app/*"],
      "@state/*": ["src/state/*"],
      "@data/*": ["src/data/*"],
      "@domain/*": ["src/domain/*"],
      "@services/*": ["src/services/*"],
      "@assets/*": ["src/assets/*"]
    }
  }
}
